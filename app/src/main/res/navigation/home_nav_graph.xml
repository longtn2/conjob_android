<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.intern.conjob.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment">
            <argument
                android:name="post"
                app:argType="com.intern.conjob.data.model.Post"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.intern.conjob.ui.home.matching.fragment.PostDetailFragment"
        android:label="PostDetailFragment">
        <argument
            android:name="post"
            app:argType="com.intern.conjob.data.model.Post"/>
    </fragment>
</navigation>
