<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_16dp"
    tools:context=".ui.auth.register.fragment.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/img_logo"
            android:layout_height="@dimen/img_logo"
            android:layout_margin="@dimen/margin_8dp"
            android:contentDescription="@string/description_logo"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imgBtnClose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_48dp"
            android:background="@color/transparent"
            android:contentDescription="@string/description_close_icon"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_44dp"
            android:text="@string/title_register"
            android:textColor="@color/red700"
            android:textSize="@dimen/fontSize_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgLogo" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/first_name"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSize_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputLayoutFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidthFocused="@dimen/text_input_layout_stroke_focused"
            app:errorIconDrawable="@color/transparent"
            app:errorTextAppearance="@dimen/edt_error_fontSize"
            app:errorTextColor="@color/red700"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvFirstName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_first_name"
                android:inputType="text"
                android:minHeight="@dimen/edt_min_height_48dp"
                android:paddingHorizontal="@dimen/padding_8dp"
                android:textSize="@dimen/fontSize_small" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/last_name"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSize_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutFirstName" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputLayoutLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidthFocused="@dimen/text_input_layout_stroke_focused"
            app:errorIconDrawable="@color/transparent"
            app:errorTextAppearance="@dimen/edt_error_fontSize"
            app:errorTextColor="@color/red"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tvLastName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_last_name"
                android:inputType="text"
                android:minHeight="@dimen/edt_min_height_48dp"
                android:paddingHorizontal="@dimen/padding_8dp"
                android:textSize="@dimen/fontSize_small" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSize_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutLastName" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_48dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@drawable/custom_spinner_dropdown"
            android:gravity="center"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toTopOf="@+id/tvPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGender" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/phone"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSize_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerGender" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputLayoutPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidthFocused="@dimen/text_input_layout_stroke_focused"
            app:errorIconDrawable="@color/transparent"
            app:errorTextAppearance="@dimen/edt_error_fontSize"
            app:errorTextColor="@color/red"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvPhone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_phone"
                android:inputType="phone"
                android:minHeight="@dimen/edt_min_height_48dp"
                android:paddingHorizontal="@dimen/padding_8dp"
                android:textSize="@dimen/fontSize_small" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/birthday"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSize_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutPhone" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputLayoutBirthday"
            android:layout_width="@dimen/layout_width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:errorIconDrawable="@color/transparent"
            app:errorTextAppearance="@dimen/edt_error_fontSize"
            app:errorTextColor="@color/red"
            app:hintEnabled="false"
            app:layout_constraintEnd_toStartOf="@id/imgDatePicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDob">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_birthday"
                android:inputType="date"
                android:minHeight="@dimen/edt_min_height_48dp"
                android:paddingHorizontal="@dimen/padding_8dp"
                android:textSize="@dimen/fontSize_small" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imgDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:contentDescription="@string/description_logo"
            android:src="@drawable/ic_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtInputLayoutBirthday"
            app:layout_constraintTop_toBottomOf="@+id/tvDob" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_48dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@drawable/custom_button"
            android:enabled="false"
            android:text="@string/button_continue"
            android:textSize="@dimen/fontSize_medium"
            android:textStyle="bold"
            app:backgroundTint="@color/red700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutBirthday"
            app:strokeColor="@color/red700" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>