<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_20dp">

    <TextView
        android:id="@+id/imgConJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app"
        android:textColor="@color/red700"
        android:textSize="@dimen/fontSize_32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgOnboard"
        android:layout_width="@dimen/layout_width_0dp"
        android:layout_height="@dimen/layout_height_0dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:contentDescription="@string/description_logo"
        android:src="@drawable/ic_logo"
        app:layout_constraintDimensionRatio="1.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgConJob" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_48dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:backgroundTint="@color/red100"
        android:insetTop="@dimen/inset_top"
        android:insetBottom="@dimen/inset_bottom"
        android:paddingHorizontal="@dimen/padding_32dp"
        android:text="@string/button_login"
        android:textColor="@color/red700"
        android:textSize="@dimen/fontSize_18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imgOnboard" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_48dp"
        android:layout_below="@id/imgOnboard"
        android:layout_marginTop="@dimen/margin_12dp"
        android:backgroundTint="@color/red100"
        android:insetTop="@dimen/inset_top"
        android:insetBottom="@dimen/inset_bottom"
        android:text="@string/button_register"
        android:textColor="@color/red700"
        android:textSize="@dimen/fontSize_18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>